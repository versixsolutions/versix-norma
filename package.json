{
  "name": "versix-norma",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @versix/web dev",
    "build": "pnpm --filter @versix/web build",
    "start": "pnpm --filter @versix/web start",
    "lint": "pnpm --filter @versix/web lint",
    "lint:fix": "pnpm --filter @versix/web lint -- --fix",
    "type-check": "pnpm --filter @versix/web type-check",
    "clean": "rm -rf node_modules apps/web/node_modules apps/web/.next",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

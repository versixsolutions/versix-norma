  "shortcuts": [
    {
      "name": "Comunicados",
      "short_name": "Comunicados",
      "description": "Ver últimos comunicados do condomínio",
      "url": "/home?tab=comunicados",
      "icons": [
        {
          "src": "/icons/comunicados.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Falar com Norma",
      "short_name": "Norma",
      "description": "Abrir chat com assistente IA",
      "url": "/home?chat=norma",
      "icons": [
        {
          "src": "/icons/icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "SOS Emergência",
      "short_name": "SOS",
      "description": "Acionar modo de emergência",
      "url": "/home?sos=true",
      "icons": [
        {
          "src": "/icons/sos.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Financeiro",
      "short_name": "Finanças",
      "description": "Ver transparência financeira",
      "url": "/home?tab=transparency",
      "icons": [
        {
          "src": "/icons/icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/home/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+norma",
      "url": "/home?action=%s"
    }
  ],

  "related_applications": [],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "handle_links": "preferred",

  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },

  "file_handlers": [
    {
      "action": "/home/upload",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ]
}
